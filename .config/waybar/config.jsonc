[{
    "layer": "top",
    "modules-left": ["hyprland/window"],
    "modules-center": ["hyprland/workspaces"],
    "modules-right": ["tray", "backlight/slider", "battery", "clock", "custom/syspower"],
    "hyprland/workspaces": {
        "format": "{icon}",
        "format-icons": {
            "active": "ÔÑë",
            "default": "ÔÑë",
            "empty": "ÔÑë"
        },
        "persistent-workspaces": {
            "*": [ 1,2,3,4]
        }
    },
    "hyprland/window": {  
        "format": "{title}",
        "maxlength": 50,
        "rewrite": {
